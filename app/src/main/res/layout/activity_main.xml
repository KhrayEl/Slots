<layout>
    <data>
        <variable
            name="slotsviewmodel"
            type="com.khrayel.slots.SlotsViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_text"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/text_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="24sp"
                    android:text="@{Long.toString(slotsviewmodel.getRecord)}"
                    />
<!--                                    android:text="@{Long.toString(slotsviewmodel.getRecord)}"
-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_text"
                    android:textSize="24sp"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/text_Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="24sp"
                    app:autoSizeTextType="none"
                    android:text="@{Long.toString(slotsviewmodel.getScore())}"
                    />
            </LinearLayout>
<!--
-->

            <LinearLayout
                android:id="@+id/layout_winloss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textWinLoss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_rolls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:id="@+id/space_roll_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/text_roll1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/roll_background"
                android:elegantTextHeight="false"
                android:gravity="center"
                android:text="@string/default_roll"
                android:layout_weight="7"
                app:autoSizeTextType="uniform" />

            <Space
                android:id="@+id/space_roll_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/text_roll2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/roll_background"
                android:gravity="center"
                android:text="@string/default_roll"
                android:layout_weight="7"
                app:autoSizeTextType="uniform" />

            <Space
                android:id="@+id/space_roll_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/text_roll3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/roll_background"
                android:gravity="center"
                android:layout_weight="7"
                android:text="@string/default_roll"
                app:autoSizeTextType="uniform" />

            <Space
                android:id="@+id/space_roll_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button_spin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/spin_text"
                    android:onClick="@{slotsviewmodel::OnClickSpin}"
                    />
<!--
-->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bet_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_bet"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/bet_text"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_bet_number"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@{Long.toString(slotsviewmodel.getCurrentBet())}"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bet_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_bet_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_plus"
                    android:onClick="@{slotsviewmodel::BetIncrease}"
                    />
<!--                    -->
                <Button
                    android:id="@+id/button_bet_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bet_minus"
                    android:onClick="@{slotsviewmodel::BetDecrease}"
                    />
<!--                    -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            >

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/restart_text"
                android:onClick="@{slotsviewmodel::OnClickRestart}"/>
<!--            -->

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>