<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".SlotsFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="slotsviewmodel"
            type="com.khrayel.slots.SlotsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/slots_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <Button
            android:id="@+id/drawable_style_changer_button"
            android:layout_width="@dimen/slots_roll_size"
            android:layout_height="@dimen/slots_roll_size"

            android:onClick="OnClick"

            app:layout_constraintBottom_toTopOf="@id/slots_layout_reels"

            app:layout_constraintEnd_toStartOf="@+id/slots_layout_top_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/slots_reel_outline_size"

            />

        <include
            android:id="@+id/slots_layout_top_info"
            layout="@layout/slots_layout_top_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/slots_reel_outline_size"

            android:layout_marginRight="@dimen/slots_reel_outline_size"
            app:layout_constraintBottom_toTopOf="@+id/slots_layout_reels"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/drawable_style_changer_button"
            app:layout_constraintTop_toTopOf="parent"
            app:slotsviewmodel="@{slotsviewmodel}" />

        <include
            android:id="@+id/slots_layout_reels"
            layout="@layout/slots_layout_reels"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/slots_layout_bets_restart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/slots_layout_top_info"
            app:layout_constraintVertical_weight="5"

            app:slotsviewmodel="@{slotsviewmodel}" />


        <include
            android:id="@+id/slots_layout_bets_restart"
            layout="@layout/slots_bets_restart"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slots_layout_reels"
            app:layout_constraintVertical_weight="2"
            app:slotsviewmodel="@{slotsviewmodel}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>