<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >
<Button
    android:id="@+id/slots_options_overlay_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="@color/black_70"
    android:background="@color/black_70"
/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/gainsboro"
        android:padding="@dimen/slots_reel_outline_size"
        android:elevation="2dp"
        >

        <Button
            android:id="@+id/main_button_sound_toggle"
            android:layout_width="@dimen/slots_roll_size"
            android:layout_height="@dimen/slots_roll_size"
            android:background="@drawable/_1f3b5"
            />

        <Button
            android:id="@+id/slots_drawstyle_button"
            android:layout_width="@dimen/slots_roll_size"
            android:layout_height="@dimen/slots_roll_size"
            />

    </LinearLayout>
</FrameLayout>

</layout>