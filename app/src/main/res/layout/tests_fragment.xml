<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.khrayel.main_app.TestsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/tests_scroll_1"

            android:layout_width="150sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tests_linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/tests_scroll_2"
            android:layout_width="150sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tests_linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>